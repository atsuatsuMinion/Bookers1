<header>
  <h1 class="edit-header">
     Editing Book
  </h1>
</header>
<main>
  <% if @book.errors.any? %>
    <div class="errors">
      <p class="errors-header"><% @book.errors.count %> errors prohibited this book being saved:</p>
      <ul class="errors-body">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form">
    <%= form_with model: @book do |f| %>
      <div class="form-item">
        <p class="form-title">Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="form-item">
        <p class="form-title">Body</p>
        <%= f.text_area :body %>
      </div>
      <%= f.submit " Update Book " %>
    <% end %>
  </div>

  <p class="move"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
</main>