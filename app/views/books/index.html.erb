<header class="index-header">
    <h1>Books</h1>
</header>
<main>
    <% if @book != nil %>
        <table class"book-table">
            <thead>
                <tr>
                    <th class="column-title">Title</th>
                    <th class="column-title">Body</th>
                </tr>
            </thead>
            <tbody>
                    <!--投稿した本の数だけループ-->
                    <% @book.each do |book| %>
                        <tr>
                            <td>　<%= book.title %></td>
                            <td>　<%= book.body %></td>
                            <td>　<%= link_to "Show", book_path(book.id) %></td>
                            <td>　<%= link_to "Edit", edit_book_path(book.id) %></td>
                            <td>　<%= link_to "Destroy", book_path(book.id), method: :Delete %></td>
                        </tr>
                    <% end %>
            </tbody>
        </table>
    <% end %>

    <h3 class="new">New book</h3>
    <% if @newbook.errors.any? %>
        <%= @newbook.errors.count %>件のエラーが発生しました %>
        <ul>
            <% @newbook.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
    <div class="form">
        <%= form_with model: @newbook do |f|%>
            <div class="form-item">
                <p class="index-title">Title</p>
                <%= f.text_field :title %>
            </div>
            <div class="form-item">
                <p class="index-title">Body</p>
                <%= f.text_area :body %>
            </div>
            <%= f.submit " Create Book " %>
        <% end %>
    </div>
</main>